@model IntegralInvesting.Models.BankAccountViewModel

<div class="modal-header">
    <h5 class="modal-title">Link New Bank Account</h5>
</div>
<div class="modal-body">
    <form asp-controller="BankAccount" asp-action="SaveLinkedAccount" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-2">
            <label asp-for="AccountName" class="control-label"></label>
            <input asp-for="AccountName" class="form-control" />
            <span asp-validation-for="AccountName" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="RoutingNumber" class="control-label"></label>
            <input asp-for="RoutingNumber" class="form-control" />
            <span asp-validation-for="RoutingNumber" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="AccountNumber" class="control-label"></label>
            <input type="password" asp-for="AccountNumber" class="form-control" />
            <span asp-validation-for="AccountNumber" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ConfirmAccountNumber" class="control-label"></label>
            <input type="password" asp-for="ConfirmAccountNumber" class="form-control" />
            <span asp-validation-for="ConfirmAccountNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="button" class="btn yellow-button" data-bs-dismiss="modal">Close</button>
            <input id="btnModalLinkNewBankAccSubmit" type="submit" value="Link Account" class="btn green-button" />
        </div>
    </form>
</div>
