@model IntegralInvesting.Models.PortfolioAssetViewModel

<div class="modal-header">
    <h5 class="modal-title" id="sellStockLabel">Sell Shares for @Model.Symbol - @Model.Name</h5>
</div>
<div class="modal-body">
    <form asp-controller="Portfolio" asp-action="SellShares" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <input type="hidden" asp-for="PortfolioAssetId" />

        <div class="form-group">
            <label asp-for="CurrentPrice" class="control-label"></label>
            <input readonly asp-for="CurrentPrice" class="form-control" />
            <span asp-validation-for="CurrentPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SellQuantity" class="control-label"></label>
            <input type="number" id="sellQuantityField" max="@Model.NumberOfShares" asp-for="SellQuantity" class="form-control" onchange="CalculateSaleTotal('@Model.CurrentPrice')" />
            <span asp-validation-for="SellQuantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SaleTotal" class="control-label"></label>
            <input readonly id="saleTotalField" asp-for="SaleTotal" class="form-control" />
            <span asp-validation-for="SaleTotal" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="button" class="btn yellow-button" data-bs-dismiss="modal">Close</button>
            <button type="submit" id="btnModalSellSubmit" class="btn green-button" data-save="modal">Sell</button>
        </div>
    </form>
</div>