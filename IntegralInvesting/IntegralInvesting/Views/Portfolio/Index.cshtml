@model IEnumerable<IntegralInvesting.Models.PortfolioStockViewModel>

@{ ViewData["Title"] = "Index"; }

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PortfolioId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchasePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PortfolioId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchasePrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PortfolioStockId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PortfolioStockId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PortfolioStockId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="container">
    <div class="row">
        <div class="col-4">
            <p>Sample text to be displayed on the left side.</p>
        </div>
        <div class="d-flex col-8">
            <div class="overflow-auto" style="height: 400px">
                @foreach (var item in Model)
                {
                    <div class="card m-2">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/Vertical/mountain1.webp" class="img-fluid rounded-start" />
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">Card title</h5>
                                    <p class="card-text">
                                        This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">Last updated 3 mins ago</small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
